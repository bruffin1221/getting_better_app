<h1><%=@plan.name%></h1>
<h4><%=@plan.description%></h4>
<h4><%=@plan.deadline%></h4>
<ol>
<% @plan.goals.each do |p| %>
     <li>Goal: <%=p.name %>
        <ol>
        <% @plan.objectives.each do |o| %>
            <li>Objectives:<%= o.name %>
            <ol>
            <% @plan.strategies.each do |s| %>
                <li>Strategies: <%= s.routine%>
                 <ol>
                 <% @plan.tactics.each do |t| %>
                    <li>Tactics: <%= t.actions %> </li> 
                  </ol>
                  <% end %>
                </li>
            <% end %>
            </ol>
            </li>
        <% end %> 
        </ol>
        <% end %>
    </li>
</ol>

